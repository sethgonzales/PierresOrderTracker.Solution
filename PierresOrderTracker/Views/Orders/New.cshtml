@{
  Layout = "_Layout";
}

<h1>Add a new order for @Model.VendorName</h1>

<form action="/vendors/@Model.Id/orders" method="post">
  <input id="vendorId" name="vendorId" type="hidden" value="@Model.Id">
  <label for="orderTitle">Order Title: </label>
  <input id="orderTitle" name="orderTitle" type="text"><br><br>
  <label for="orderDescription">Order Description: </label>
  <input id="orderDescription" name="orderDescription" type="text"><br><br>
  <label for="orderPrice">Order Price: </label>
  <input id="orderPrice" name="orderPrice" type="number"><br><br>
  <label for="orderPrice">Order Date (MM/DD/YYYY): </label>
  <input id="orderPrice" name="orderPrice" type="string"><br>
  <button type="submit">Add Order</button>
</form>