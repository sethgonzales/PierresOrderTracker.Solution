@{
  Layout = "_Layout";
}

<h1>New Order for @Model.VendorName</h1><br>

<form action="/vendors/@Model.Id/orders" method="post" class="form">
  <input id="vendorId" name="vendorId" type="hidden" value="@Model.Id">
  <label for="orderTitle">Title: </label>
  <input id="orderTitle" name="orderTitle" type="text" class="form-control" required><br>
  <label for="orderDescription">Description: </label>
  <input id="orderDescription" name="orderDescription" type="text" class="form-control" required><br>
  <label for="orderPrice">Price: </label>
  <input id="orderPrice" name="orderPrice" type="number" step=0.01 min="0" class="form-control" placeholder="$" required><br>
  <label for="orderDate">Pickup Date: </label>
  <input id="orderDate" name="orderDate" type="date" class="form-control" required><br><br>
  <button type="submit">Add Order</button>
</form>

<div class="navlinks">
  <p><a href="/">Home</a></p>
  <p><a href="/vendors">View Vendors</a></p>
</div>