@{
  Layout = "_Layout";
}

@using PierresOrderTracker.Models;

<h1>Vendors</h1><br>

@if (@Model.Count == 0)
{
  <h3>There are no vendors yet!</h3>
} 

<ul class="lists">
@foreach (Vendor vendor in Model)
{
  <li><h4><a href='/vendors/@vendor.Id'>@vendor.VendorName</a></h4></li>
}
</ul>

<p class="navlinks"><a href='/'>Back home</a></p>