@{
  Layout = "_Layout";
}

@using PierresOrderTracker.Models;

<h1>Bakery Vendors</h1><br>

@if (@Model.Count == 0)
{
  <h3>There are no vendors yet!</h3>
}

<ul class="lists">
  @foreach (Vendor vendor in Model)
  {
    <li>
      <h4><a href='/vendors/@vendor.Id'>@vendor.VendorName</a></h4>
    </li>
  }
</ul>

<div class="navlinks">
  <p><a href='/'>Home</a></p>
  <p><a href='/vendors/new'>Add New Vendors</a></p>
</div>