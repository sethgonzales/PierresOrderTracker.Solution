@{
  Layout = "_Layout";
}

@using PierresOrderTracker.Models;

<h1>Pierre's Vendors</h1>

@if (@Model.Count == 0)
{
  <h3>Pierre does not have any vendors yet!</h3>
} 

@foreach (Vendor vendor in Model)
{
  <h3><a href='/vendors/@vendor.Id'>@vendor.VendorName</a></h3>
}

<p><a href='/'>Back home</a></p>